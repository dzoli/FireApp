<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/conversationPhoto"
            android:layout_width="@dimen/image_large_size"
            android:layout_height="@dimen/image_large_size"
            android:layout_margin="@dimen/medium_margin"
            android:src="@drawable/ic_conversation_msg"
            android:background="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_margin="@dimen/large_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/large_text"/>

            <TextView
                android:id="@+id/messagesNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/medium_text"
                />

            <TextView
                android:id="@+id/usersNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/medium_text"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>